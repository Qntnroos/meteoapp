<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8"/>
        <title>
            {% block title %}Welcome!{% endblock %}
        </title>
        {% block stylesheets %}
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.0/css/bootstrap.min.css" integrity="sha384-PDle/QlgIONtM1aqA2Qemk5gPOE7wFq8+Em+G/hmo5Iq0CCmYZLv3fVRDJ4MMwEA" crossorigin="anonymous">
{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}"/>
        <link rel="stylesheet" type="text/css" href="{{ asset('css/style.css') }}"/>
    </head>
    <body>
        <div id="wrapwrap" class="">
            <div id="header">
                {% block header %}{% endblock %}
            </div>
            <div id="navbar">
                {% block navbar %}{% endblock %}
            </div>
            <div id="main" class="container">
                {% block main %}{% endblock %}
                <div id="date" class="col">
                            {% block date %}{% endblock %}
                 </div>
                <div id="location">
                    {% block location %}{% endblock %}
                </div>
                <div id="day_view" class="row">
                    {% block day_view %}{% endblock %}
                    <div id="date_avg" class="col">
                        {% block day_avg %}{% endblock %}
                        
                        <div id="daily_avg">
                            {% block daily_avg %}{% endblock %}
                        </div>
                    </div>
                    <div id="current" class="col">
                        {% block current %}{% endblock %}
                        <div id="temp">
                            {% block temp %}{% endblock %}
                        </div>
                        <div id="situation">
                            {% block situation %}{% endblock %}
                        </div>
                        <div id="rain">
                            {% block rain %}{% endblock %}
                        </div>
                        <div id="wind">
                            {% block wind %}{% endblock %}
                        </div>
                    </div>
                </div>
            </div>
            <div id="footer">
                {% block footer %}{% endblock %}
                <div id="footerleft">
                    {% block footerleft %}{% endblock %}
                </div>
                <div id="footermiddle">
                    {% block footermiddle %}{% endblock %}
                </div>
                <div id="footerright">
                    {% block footerright %}{% endblock %}
                </div>
            </div>
            {% block javascripts %}
            <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.0/js/bootstrap.min.js" integrity="sha384-7aThvCh9TypR7fIc2HV4O/nFMVCBwyIUKL8XCtKE+8xgCgl/PQGuFsvShjr74PBp" crossorigin="anonymous"></script>
{% endblock %}
        </body>
    </html>